@model EarningWebsite.ViewModels.DataEntryVM

@{
    ViewBag.Title = "LoadImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(!String.IsNullOrEmpty(ViewBag.imageName))
{
    <img src=@Url.Content("~/Images/" + ViewBag.imageName) width="100%" height="400" />

    using(Html.BeginForm("DataEntry", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-warning" })
        <fieldset>
            <p class="text-uppercase"> Enter the text above: </p>

            <div class="form-group">
                @*Html.Label("", htmlAttributes: new { @class = "col-form-label" })*@
                @Html.EditorFor(x => x.imageText, new { htmlAttributes = new { @class = "form-control input-lg" } })
            </div>
            <div>
                <input type="submit" class="btn btn-md" value="Submit">
            </div>

        </fieldset>
    }
}
else
{
    <p>An error occured while loading the image</p>
}